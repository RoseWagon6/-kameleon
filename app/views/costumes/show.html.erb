<!-- the show must go on ! -->
<div class="container">
  <h1>Costumes Details : </h1>
  <p>See the costume you just selected !</p>


    <div class="col-md-6">
      <% if @costume.image.url.nil? %>
        <%= image_tag("Kameleon-Logo.png") %>
      <% else %>
        <%= cl_image_tag @costume.image, width: 500, height: 400, crop: :fill %>
      <% end %>
    </div>

    <div class="col-md-3">
      <p>Name : <%= @costume.name %></p>
      <p><%= @costume.price %> Euros</p>
      <br>
      <p>Description : </p>
      <p><%= @costume.description %></p>
      <br>
      <p>Size :<%= @costume.size %></p>
      <p>Category :<%= @costume.category %></p>
      <br>
      <p>City : <%= @costume.city %></p>
      <p> Available :
        <% if @costume.availability == true %>
            <%= "Yes" %>
          <% else %>
            <%= "No" %>
          <% end %>
      </p>
    </div>


  <!-- buttons : -->
  <div class="btn-show-details col-md-3">
    <div class="span2">
    <!-- rent to renter bookings-->
    <%= link_to 'Rent', bookings_path, class: "btn btn-primary btn-block" %>
    <!-- List Alls -->
    <%= link_to 'See all costumes', costumes_path, class: "btn btn-success btn-block"  %>
    <!-- TO DO back to create -->
    <!-- update -->
    </div>
  </div>
</div>
