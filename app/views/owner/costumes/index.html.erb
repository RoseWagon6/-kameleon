
<div class="container">
  <h1>My costumes to rent</h1>
      <div class="col-xs col-xs-offset-3 col-sm-3 col-sm-offset-9 col-md-3 col-md-offset-9">
      <%= link_to "My bookings", owner_bookings_path, class: "btn btn-success btn-block"  %>

    </div>
  <div class="row">
    <% @costumes.each do |costume| %>
      <div class="col-xs-8 col-sm-6 col-md-3">
        <% if costume.image.url.nil? %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path "Kameleon-Logo.png", width: 200, height: 200, crop: :fill %>');">
        <% else %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.2)), url('<%= cl_image_path costume.image, width: 200, height: 200, crop: :fill %>');">
        <% end %>

          <div class="card-category">
            <%= costume.category %>
          </div>

          <div class="card-price col-xs-offset-3">
            <span><%= costume.price %> â‚¬ </span>
          </div>

          <div class="card-name">
            <h2><%= costume.name %></h2>
          </div>

          <div class="card-city">
            <%= costume.city %>
          </div>

          <%= link_to "", costume_path(costume), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

